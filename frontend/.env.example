# Alpha Asimov Configuration
# Copy this to .env and update with your actual credentials

# MQTT Broker Configuration (DISABLED)
# REACT_APP_MQTT_HOST=mqtt.alphaasimov.com
# REACT_APP_MQTT_PORT=8883
# REACT_APP_MQTT_USERNAME=aa_frontend_client
# REACT_APP_MQTT_PASSWORD=secure_password_2024

# Robot Configuration
REACT_APP_BULLDOG04_ID=BULLDOG04
REACT_APP_BULLDOG05_ID=BULLDOG05

# Development Mode (set to 'true' to use mock data)
REACT_APP_USE_MOCK_ROBOTS=false

# Debug Mode (MQTT disabled)
# REACT_APP_MQTT_DEBUG=false

# Connection Settings (MQTT disabled)
# REACT_APP_MQTT_KEEPALIVE=60
# REACT_APP_MQTT_RECONNECT_PERIOD=5000
# REACT_APP_MQTT_CONNECT_TIMEOUT=30000

# Security Settings (MQTT disabled)
# REACT_APP_MQTT_USE_SSL=true
# REACT_APP_MQTT_REJECT_UNAUTHORIZED=true

# ==========================================
# MOMO PAYMENT CONFIGURATION
# ==========================================
# Backend API URL cho MoMo payment service

# Development (local - port 3001 là backend chính thức)
# VITE_MOMO_API_URL=http://localhost:3001/api/momo

# Production - Railway Backend
VITE_MOMO_API_URL=https://webkioskbe-production.up.railway.app/api/momo

# Mode
# VITE_MODE=development
VITE_MODE=production

# ==========================================
# NOTES:
# ==========================================
# 1. Backend chính thức chạy trên port 3001 (thay vì 5000)
# 2. API path là /api/momo (đã tích hợp vào backend chính)
# 3. Thay đổi VITE_MOMO_API_URL khi deploy production
# 4. Backend phải có HTTPS trong production
# 5. Cấu hình tương ứng trên Netlify Environment Variables
